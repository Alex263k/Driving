<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Driving.UpgradePage"
             Title="Upgrades"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Border BackgroundColor="#334155"
                    Stroke="#475569"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    Padding="20">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="⚙️ UPGRADES"
                           TextColor="White"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Upgrade your car's performance!"
                           TextColor="#94a3b8"
                           FontSize="16"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="#1e293b"
                    Stroke="#334155"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="10">

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="❤️"
                               FontSize="24"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout Spacing="2">
                            <Label Text="DURABILITY"
                                   TextColor="White"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                            <Label Text="Increases total health points"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*"
                          ColumnSpacing="2"
                          HeightRequest="20">
                        <BoxView x:Name="DurabilitySegment1" Color="#4b5563" CornerRadius="3"/>
                        <BoxView x:Name="DurabilitySegment2" Color="#4b5563" CornerRadius="3" Grid.Column="1"/>
                        <BoxView x:Name="DurabilitySegment3" Color="#4b5563" CornerRadius="3" Grid.Column="2"/>
                        <BoxView x:Name="DurabilitySegment4" Color="#4b5563" CornerRadius="3" Grid.Column="3"/>
                        <BoxView x:Name="DurabilitySegment5" Color="#4b5563" CornerRadius="3" Grid.Column="4"/>
                        <BoxView x:Name="DurabilitySegment6" Color="#4b5563" CornerRadius="3" Grid.Column="5"/>
                        <BoxView x:Name="DurabilitySegment7" Color="#4b5563" CornerRadius="3" Grid.Column="6"/>
                        <BoxView x:Name="DurabilitySegment8" Color="#4b5563" CornerRadius="3" Grid.Column="7"/>
                        <BoxView x:Name="DurabilitySegment9" Color="#4b5563" CornerRadius="3" Grid.Column="8"/>
                        <BoxView x:Name="DurabilitySegment10" Color="#4b5563" CornerRadius="3" Grid.Column="9"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                            <Label Text="Current Level:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="DurabilityLevelLabel"
                                   Text="1/10"
                                   TextColor="White"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Upgrade Price:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="DurabilityPriceLabel"
                                   Text="100 🪙"
                                   TextColor="Gold"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Button x:Name="UpgradeDurabilityButton"
                            Text="UPGRADE"
                            Clicked="OnUpgradeDurabilityClicked"
                            BackgroundColor="#10b981"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="45"
                            CornerRadius="22"
                            FontAttributes="Bold"/>

                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="#1e293b"
                    Stroke="#334155"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="10">

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="⚡"
                               FontSize="24"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout Spacing="2">
                            <Label Text="SPEED"
                                   TextColor="White"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                            <Label Text="Increases maximum engine speed"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*"
                          ColumnSpacing="2"
                          HeightRequest="20">
                        <BoxView x:Name="SpeedSegment1" Color="#4b5563" CornerRadius="3"/>
                        <BoxView x:Name="SpeedSegment2" Color="#4b5563" CornerRadius="3" Grid.Column="1"/>
                        <BoxView x:Name="SpeedSegment3" Color="#4b5563" CornerRadius="3" Grid.Column="2"/>
                        <BoxView x:Name="SpeedSegment4" Color="#4b5563" CornerRadius="3" Grid.Column="3"/>
                        <BoxView x:Name="SpeedSegment5" Color="#4b5563" CornerRadius="3" Grid.Column="4"/>
                        <BoxView x:Name="SpeedSegment6" Color="#4b5563" CornerRadius="3" Grid.Column="5"/>
                        <BoxView x:Name="SpeedSegment7" Color="#4b5563" CornerRadius="3" Grid.Column="6"/>
                        <BoxView x:Name="SpeedSegment8" Color="#4b5563" CornerRadius="3" Grid.Column="7"/>
                        <BoxView x:Name="SpeedSegment9" Color="#4b5563" CornerRadius="3" Grid.Column="8"/>
                        <BoxView x:Name="SpeedSegment10" Color="#4b5563" CornerRadius="3" Grid.Column="9"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                            <Label Text="Current Level:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="SpeedLevelLabel"
                                   Text="1/10"
                                   TextColor="White"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Upgrade Price:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="SpeedPriceLabel"
                                   Text="100 🪙"
                                   TextColor="Gold"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Button x:Name="UpgradeSpeedButton"
                            Text="UPGRADE"
                            Clicked="OnUpgradeSpeedClicked"
                            BackgroundColor="#10b981"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="45"
                            CornerRadius="22"
                            FontAttributes="Bold"/>

                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="#1e293b"
                    Stroke="#334155"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="10">

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="⛽"
                               FontSize="24"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout Spacing="2">
                            <Label Text="FUEL TANK"
                                   TextColor="White"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                            <Label Text="Expand fuel storage capacity"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*"
                          ColumnSpacing="2"
                          HeightRequest="20">
                        <BoxView x:Name="FuelTankSegment1" Color="#4b5563" CornerRadius="3"/>
                        <BoxView x:Name="FuelTankSegment2" Color="#4b5563" CornerRadius="3" Grid.Column="1"/>
                        <BoxView x:Name="FuelTankSegment3" Color="#4b5563" CornerRadius="3" Grid.Column="2"/>
                        <BoxView x:Name="FuelTankSegment4" Color="#4b5563" CornerRadius="3" Grid.Column="3"/>
                        <BoxView x:Name="FuelTankSegment5" Color="#4b5563" CornerRadius="3" Grid.Column="4"/>
                        <BoxView x:Name="FuelTankSegment6" Color="#4b5563" CornerRadius="3" Grid.Column="5"/>
                        <BoxView x:Name="FuelTankSegment7" Color="#4b5563" CornerRadius="3" Grid.Column="6"/>
                        <BoxView x:Name="FuelTankSegment8" Color="#4b5563" CornerRadius="3" Grid.Column="7"/>
                        <BoxView x:Name="FuelTankSegment9" Color="#4b5563" CornerRadius="3" Grid.Column="8"/>
                        <BoxView x:Name="FuelTankSegment10" Color="#4b5563" CornerRadius="3" Grid.Column="9"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                            <Label Text="Current Level:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="FuelTankLevelLabel"
                                   Text="1/10"
                                   TextColor="White"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Upgrade Price:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="FuelTankPriceLabel"
                                   Text="50 🪙"
                                   TextColor="Gold"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Label x:Name="FuelTankEffectLabel"
                           Text="Max Fuel: 100L"
                           TextColor="LightGray"
                           FontSize="14"
                           HorizontalOptions="Center"/>

                    <Button x:Name="FuelTankUpgradeButton"
                            Text="UPGRADE"
                            Clicked="OnFuelTankUpgradeClicked"
                            BackgroundColor="#3b82f6"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="45"
                            CornerRadius="22"
                            FontAttributes="Bold"/>

                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="#1e293b"
                    Stroke="#334155"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="10">

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="⚙️"
                               FontSize="24"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout Spacing="2">
                            <Label Text="ENGINE EFFICIENCY"
                                   TextColor="White"
                                   FontSize="18"
                                   FontAttributes="Bold"/>
                            <Label Text="Reduces fuel consumption rate"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*"
                          ColumnSpacing="2"
                          HeightRequest="20">
                        <BoxView x:Name="EngineSegment1" Color="#4b5563" CornerRadius="3"/>
                        <BoxView x:Name="EngineSegment2" Color="#4b5563" CornerRadius="3" Grid.Column="1"/>
                        <BoxView x:Name="EngineSegment3" Color="#4b5563" CornerRadius="3" Grid.Column="2"/>
                        <BoxView x:Name="EngineSegment4" Color="#4b5563" CornerRadius="3" Grid.Column="3"/>
                        <BoxView x:Name="EngineSegment5" Color="#4b5563" CornerRadius="3" Grid.Column="4"/>
                        <BoxView x:Name="EngineSegment6" Color="#4b5563" CornerRadius="3" Grid.Column="5"/>
                        <BoxView x:Name="EngineSegment7" Color="#4b5563" CornerRadius="3" Grid.Column="6"/>
                        <BoxView x:Name="EngineSegment8" Color="#4b5563" CornerRadius="3" Grid.Column="7"/>
                        <BoxView x:Name="EngineSegment9" Color="#4b5563" CornerRadius="3" Grid.Column="8"/>
                        <BoxView x:Name="EngineSegment10" Color="#4b5563" CornerRadius="3" Grid.Column="9"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                            <Label Text="Current Level:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="EngineLevelLabel"
                                   Text="1/10"
                                   TextColor="White"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="Upgrade Price:"
                                   TextColor="#94a3b8"
                                   FontSize="12"/>
                            <Label x:Name="EnginePriceLabel"
                                   Text="75 🪙"
                                   TextColor="Gold"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Label x:Name="EngineEffectLabel"
                           Text="Consumption: -0%"
                           TextColor="LightGray"
                           FontSize="14"
                           HorizontalOptions="Center"/>

                    <Button x:Name="EngineUpgradeButton"
                            Text="UPGRADE"
                            Clicked="OnEngineUpgradeClicked"
                            BackgroundColor="#3b82f6"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="45"
                            CornerRadius="22"
                            FontAttributes="Bold"/>

                </VerticalStackLayout>
            </Border>

            <Button x:Name="BackButton"
                    Text="← BACK"
                    Clicked="OnBackClicked"
                    BackgroundColor="#64748b"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>